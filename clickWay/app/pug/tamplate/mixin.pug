//- mixin


//- стили в файле _main-product-item.sass
mixin product-item(imgLink, price, discount, oldPrice, discountToday)

    .product-item-wrapper
        
        .product-item__images
            img(src= imgLink, alt="сапоги")
        

        .product-item__content

            .product-item__content-heart.js_product_item_content_heart

            .product-item__content-price
                span= price 
                span= discount 
                span= oldPrice 

            .product-item__content-text-wrap
                .product-item__content-discount= discountToday  

                .product-item__content-name
                    |Мужские ботинки Keddo

        button.product-item__button
            span Добавить в корзину
            span В корзину

