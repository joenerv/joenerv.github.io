                    .swiper-slide 
                        +product-item("img/popup-product-add-img2.png", '9 658 ₽', '', '11 478 ₽', 'Ваша цена сегодня: 6 797 ₽')
                    .swiper-slide 
                        +product-item("img/popup-product-add-img3.png", '9 658 ₽', '', '11 478 ₽', 'Ваша цена сегодня: 6 797 ₽')
                
                .swiper-button-prev
