//- слайдер с продуктом (стили в файле _slider-product)
mixin slider-product

    // СЛАЙДЕР ДЛЯ MOBILE
    .products-slider-mobile

        +product-item("img/main-product-img1.png", '9 658 ₽', '-30%', '11 478 ₽', 'Ваша цена сегодня: 6 797 ₽')
        +product-item("img/main-product-img2.png", '9 658 ₽', '-30%', '11 478 ₽', 'Ваша цена сегодня: 6 797 ₽')
        +product-item("img/main-product-img3.png", '9 658 ₽', '-30%', '11 478 ₽', '')
        +product-item("img/main-product-img4.png", '9 658 ₽', '', '', '')
        +product-item("img/main-product-img1.png", '9 658 ₽', '', '', '')

    // СЛАЙДЕР ДЛЯ DESKTOP
    .swiper-container.products-slider__container
        // Additional required wrapper
        .swiper-wrapper.products-slider__wrapper

            // Slides
            .swiper-slide.products-slider__slide 
                +product-item("img/main-product-img1.png", '9 658 ₽', '-30%', '11 478 ₽', 'Ваша цена сегодня: 6 797 ₽')

            .swiper-slide.products-slider__slide 
                +product-item("img/main-product-img2.png", '9 658 ₽', '-30%', '11 478 ₽', 'Ваша цена сегодня: 6 797 ₽')

            .swiper-slide.products-slider__slide 
                +product-item("img/main-product-img3.png", '9 658 ₽', '-30%', '11 478 ₽', '')

            .swiper-slide.products-slider__slide 
                +product-item("img/main-product-img4.png", '9 658 ₽', '', '', '')

        // If we need navigation buttons
        .swiper-button-prev.products-slider__prev
        .swiper-button-next.products-slider__next

//- POPUP ТОВАР ДОБАВЛЕН В КОРЗИНУ (стили в файле _popup-product-add.sass)
